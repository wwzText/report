.index-page-container {
  background-color: white;
}
.index-page-container .index-banner-main {
  position: relative;
  width: 100%;
  height: 190px;
}
.index-page-container .index-banner-main .index-banner-img {
  width: 100%;
}
.index-page-container .index-banner-main .index-page-header {
  position: absolute;
  top: 44px;
  color: white;
  left: 0;
  right: 0;
}
.index-page-container .index-banner-main .index-page-header .iconhoutui-01 {
  position: absolute;
  font-size: 24px;
  left: 30px;
  z-index: 99;
}
.index-page-container .index-banner-main .index-page-header .index-page-header-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
}
.pop {
  padding-top: 60px;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  display: flex;
  flex-direction: column;
}
.report-entry-main {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.report-entry-main .report-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 148px;
  height: 138px;
  border: 1px solid #dcdfe6;
  border-radius: 4px;
  margin: 20px 0 0;
  padding: 15px 0;
  box-sizing: border-box;
}
.report-entry-main .report-item img {
  width: 88px;
  height: 88px;
}
.index-list-margin-item {
  margin-top: 1px;
  margin-bottom: 10px;
}
.see-self-report {
  margin: 10px;
  box-sizing: border-box;
  padding: 14px 0 14px 10px;
  background-color: #f7f7f7;
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #333;
  justify-content: space-between;
  border-radius: 2px;
  height: 40px;
  position: relative;
}
.see-self-report::after {
  content: "";
  position: absolute;
  bottom: -30px;
  width: 200%;
  border-bottom: 1px solid #DBDBDB;
  left: -50%;
  transform: scale(0.5);
  right: 0;
  height: 200%;
}
